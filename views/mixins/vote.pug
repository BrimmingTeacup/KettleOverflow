
mixin qUpvote(questionId)
    div(class="vote-div")
        div(class="qUpVoteTally") #{upvotes}
        div(id=questionId class="question-up-vote") ðŸ”¼

mixin qDownvote(questionId)
    div(class="vote-div")
        div(class="qDownVoteTally") #{downvotes}
        div(id=questionId class="question-down-vote") ðŸ”½

mixin aUpvote(answerId)
    div(class="vote-div")
        div(class=`tally${answerId}`) #{answerVotes[answerId].length}
        div(id=answerId class="answer-up-vote") ðŸ”¼

mixin aDownvote(answerId)
    div(class="vote-div")
        div(class=`tallyDown${answerId}`) #{answerVotes[answerId].length}
        div(id=answerId class="answer-down-vote") ðŸ”½
