doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="stylesheet" href="/stylesheets/layout.css")
        script(src="/javascripts/search-button.js" type="module" defer)
  div
    nav(class="navbar")
      div(class="logo-section")
        img(src="/kettle.png" id="kettle-image")
        a(href="/" id="kettle-overflow") Kettle Overflow
      div(class="search")
        form(action="/questions" method="post")
          input(type="text" placeholder="Search..." id="search-bar" name="content")
          button(type="submit" id="submit-search") Submit
      div
        if locals.authenticated
          form(action="/users/logout" method="post")
            button(type="submit" id="logout-button") Log Out
          //- a(href="/users/login" id="logout-link") Log Out
        else
          div(id="login-button")
            a(href="/users/login" id="login-link") Log In
          div(id="signup-button")
            a(href="/users/signup" id="logout-link") Sign Up
    div
      div(class="footer")
        div(class="made-by")
          h3 Brewed Up By Sarah, Drew, & Lauren

    block content
